<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox fx:id="transformPanel" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cgvsu.controller.TransformController"
      spacing="15" alignment="CENTER_LEFT"
      style="-fx-background-color: rgba(240,240,240,0.9); -fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 1;"
      visible="false" managed="false">
    <!-- === POSITION === -->
    <VBox spacing="5">
        <Label text="Position" style="-fx-font-weight: bold;"/>
        <HBox spacing="5">
            <Label text="X:"/>
            <Spinner fx:id="translateXField" prefWidth="80" editable="true"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Y:"/>
            <Spinner fx:id="translateYField" prefWidth="80" editable="true"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Z:"/>
            <Spinner fx:id="translateZField" prefWidth="80" editable="true"/>
        </HBox>
    </VBox>

    <!-- === ROTATION === -->
    <VBox spacing="5">
        <Label text="Rotation (Â°)" style="-fx-font-weight: bold;"/>
        <HBox spacing="5">
            <Label text="X:"/>
            <Spinner fx:id="rotateXField" prefWidth="80" editable="true"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Y:"/>
            <Spinner fx:id="rotateYField" prefWidth="80" editable="true"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Z:"/>
            <Spinner fx:id="rotateZField" prefWidth="80" editable="true"/>
        </HBox>
    </VBox>

    <!-- === SCALE === -->
    <VBox spacing="5">
        <Label text="Scale" style="-fx-font-weight: bold;"/>
        <HBox spacing="5">
            <Label text="X:"/>
            <Spinner fx:id="scaleXField" prefWidth="80" editable="true"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Y:"/>
            <Spinner fx:id="scaleYField" prefWidth="80" editable="true"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Z:"/>
            <Spinner fx:id="scaleZField" prefWidth="80" editable="true"/>
        </HBox>
    </VBox>
    <!-- === BUTTON === -->
    <VBox spacing="5" alignment="CENTER_LEFT">
        <Button text="Reset" onAction="#handleResetTransform" style="-fx-pref-width: 80;"/>
    </VBox>
</VBox>
