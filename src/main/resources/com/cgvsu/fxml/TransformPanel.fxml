<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>

<VBox fx:id="transformPanel"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cgvsu.controller.TransformController"
      spacing="18"
      alignment="TOP_CENTER"
      styleClass="panel-dark">

    <VBox spacing="8">
        <Label text="Position" styleClass="label-title"/>

        <GridPane hgap="12" vgap="10" alignment="CENTER">

            <HBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label text="X:" styleClass="label-bold"/>
                <Spinner fx:id="translateXField" prefWidth="90" editable="true"/>
            </HBox>

            <HBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label text="Y:" styleClass="label-bold"/>
                <Spinner fx:id="translateYField" prefWidth="90" editable="true"/>
            </HBox>

            <HBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label text="Z:" styleClass="label-bold"/>
                <Spinner fx:id="translateZField" prefWidth="90" editable="true"/>
            </HBox>

        </GridPane>
    </VBox>

    <VBox spacing="8">
        <Label text="Rotation (Â°)" styleClass="label-title"/>

        <GridPane hgap="12" vgap="10" alignment="CENTER">

            <HBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label text="X:" styleClass="label-bold"/>
                <Spinner fx:id="rotateXField" prefWidth="90" editable="true"/>
            </HBox>

            <HBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label text="Y:" styleClass="label-bold"/>
                <Spinner fx:id="rotateYField" prefWidth="90" editable="true"/>
            </HBox>

            <HBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label text="Z:" styleClass="label-bold"/>
                <Spinner fx:id="rotateZField" prefWidth="90" editable="true"/>
            </HBox>

        </GridPane>
    </VBox>

    <VBox spacing="8">
        <Label text="Scale" styleClass="label-title"/>

        <GridPane hgap="12" vgap="10" alignment="CENTER">

            <HBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label text="X:" styleClass="label-bold"/>
                <Spinner fx:id="scaleXField" prefWidth="90" editable="true"/>
            </HBox>

            <HBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label text="Y:" styleClass="label-bold"/>
                <Spinner fx:id="scaleYField" prefWidth="90" editable="true"/>
            </HBox>

            <HBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label text="Z:" styleClass="label-bold"/>
                <Spinner fx:id="scaleZField" prefWidth="90" editable="true"/>
            </HBox>

        </GridPane>
    </VBox>

    <Separator/>

    <Button fx:id="resetButton"
            text="Reset"
            onAction="#handleResetTransform"
            styleClass="button-secondary"
            prefWidth="120"/>

</VBox>
